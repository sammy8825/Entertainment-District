<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width" />
    <title>Entertainment</title>
    <!-- CSS -->
    <link rel="stylesheet" href="./css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="../css/style.css" />

    <!-- JS -->
    <script src="../js/animation.js" defer></script>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar my-style-nav">
      <div class="d-flex justify-content-between myWidth">
        <div class="fluid-container">
          <a
            class="navbar-brand d-flex justify-content-center ps-2 rounded-pill"
            href="/home"
          >
            <img
              src="/images/logoed.png"
              alt="Entertainment"
              width="135"
              height="45"
              class="rounded-pill"
            />
          </a>
        </div>
        <div class="user d-flex justify-content-between align-middle">
          <p><%= cred.username%></p>
          <img src="/images/user.jpg" alt="user" />
        </div>
      </div>
    </nav>
    <div class="dropdown">
      <a href="/profile">My Profile</a>
      <a href="/logout">LOGOUT</a>
    </div>

    <div class="fluid-container resultDiv">
      <div class="row">
        <div class="col-12 col-md-4 searchDiv">
          <form action="/movie" method="post">
            <input
              type="text"
              name="movieName"
              id="movieName"
              placeholder="Enter the movie name"
              required
            />
            <input type="submit" value="Search" />
          </form>
        </div>
  
        <% if (message == "") { %>
        <div class="col-12 col-md-8 myCard">
          <img src= <%= movieData.poster %> alt="poster" class="poster" />
          <div class="myInfo">
            <h1 class="title"><%= movieData.name %></h1>
            <p class="director">Directed by : <%= movieData.director %></p>
            <p class="mysInfo">
              <span> <%= movieData.rated %></span>
              <span> <%= movieData.runTime %> </span>
              <span><%= movieData.genre %></span>
              <span> <%= movieData.year %></span>
            </p>
            <p class="plot"><%= movieData.plot %></p>
            <p class="rating">Rating : <span><%= movieData.rating %></span>/10</p>
          </div>
          <% } else { %>
          <img
            src="/images/movies.jpg"
            alt="poster"
            class="poster"
          />
          <div class="movieInfo">
            <p class="errorMessage"><%= message %></p>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
